<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kirabi" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/darkBackground</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkBackground</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dirty_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kirabi.TranslucentStatusBar" >
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Kirabi.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="Theme.Kirabi.Subtitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

</resources>